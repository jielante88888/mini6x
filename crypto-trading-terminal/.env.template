# 加密货币专业交易终端 - 环境配置模板
# 复制此文件为 .env 并填入实际值

# ========================================
# 应用基础配置
# ========================================
APP_NAME=加密货币专业交易终端
APP_VERSION=1.0.0
DEBUG=true

# ========================================
# API服务配置
# ========================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# ========================================
# 数据库配置
# ========================================
DATABASE_URL=sqlite:///./crypto_trading.db
REDIS_URL=redis://localhost:6379/0

# ========================================
# 币安交易所API配置
# ========================================
# 注意: 初期建议使用测试环境
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET_KEY=your_binance_secret_key_here
BINANCE_TESTNET=true  # false表示实盘交易

# ========================================
# OKX交易所API配置
# ========================================
# 注意: 初期建议使用模拟交易
OKX_API_KEY=your_okx_api_key_here
OKX_SECRET_KEY=your_okx_secret_key_here
OKX_PASSPHRASE=your_okx_passphrase_here
OKX_PAPER_TRADING=true  # false表示实盘交易

# ========================================
# WebSocket配置
# ========================================
WEBSOCKET_RECONNECT_INTERVAL=5
WEBSOCKET_MAX_RECONNECT_ATTEMPTS=10

# ========================================
# 交易默认配置
# ========================================
DEFAULT_SYMBOL=BTCUSDT
SPOT_SYMBOLS=["BTCUSDT","ETHUSDT","BNBUSDT","ADAUSDT","DOTUSDT"]
FUTURES_SYMBOLS=["BTCUSDT-PERP","ETHUSDT-PERP","BNBUSDT-PERP"]

# ========================================
# 风险控制配置
# ========================================
MAX_POSITION_RATIO=0.1      # 最大仓位比例 10%
STOP_LOSS_RATIO=0.05        # 止损比例 5%
TAKE_PROFIT_RATIO=0.1       # 止盈比例 10%

# ========================================
# 通知配置 (可选)
# ========================================
# Telegram Bot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Email通知
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password

# ========================================
# AI模型配置 (可选)
# ========================================
AI_MODEL_PATH=./models
AI_PREDICTION_INTERVAL=300  # 5分钟预测间隔

# ========================================
# 监控配置 (可选)
# ========================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000